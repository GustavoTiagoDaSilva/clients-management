{
  "info": {
    "name": "Clients Management API",
    "description": "Postman Collection for Clients Management endpoints.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "version": "1.0.0"
  },
  "item": [
    {
      "name": "Get All Clients",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/clients",
          "host": ["{{baseUrl}}"],
          "path": ["api", "clients"]
        }
      }
    },
    {
      "name": "Get Client By ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/clients/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "clients", ":id"]
        }
      }
    },
    {
      "name": "Create Client",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id\": 1,\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.doe@example.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/clients",
          "host": ["{{baseUrl}}"],
          "path": ["api", "clients"]
        }
      }
    },
    {
      "name": "Update Client",
      "request": {
        "method": "PUT",
        "header": [
          {"key": "Content-Type", "value": "application/json"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id\": 1,\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Doe\",\n  \"email\": \"jane.doe@example.com\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/clients/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "clients", ":id"]
        }
      }
    },
    {
      "name": "Delete Client",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/clients/:id",
          "host": ["{{baseUrl}}"],
          "path": ["api", "clients", ":id"]
        }
      }
    }
  ]
}

